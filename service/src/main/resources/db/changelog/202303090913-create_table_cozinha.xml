<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="1680004681786-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_prato" startValue="1"/>
        <createTable tableName="notificacao_cozinha">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_notificacao_cozinha"/>
            </column>
            <column name="prato_id" type="BIGINT"/>
            <column name="status_prato" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ativo" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="prato_id" baseTableName="notificacao_cozinha"
                                 constraintName="FK_NOTIFICACAO_COZINHA_ON_PRATO" referencedColumnNames="id"
                                 referencedTableName="prato_cozinha"/>
    </changeSet>
</databaseChangeLog>
