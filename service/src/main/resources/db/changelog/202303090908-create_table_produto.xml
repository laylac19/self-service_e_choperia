<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="1678893178114-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_produto" startValue="1"/>
        <createTable tableName="produto">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_produto"/>
            </column>
            <column name="codigo_barras" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="qtde_estoque" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="preco_compra" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="unidade" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ponto_encomenda" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="preco_venda" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="tipo_produto" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ativo" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
