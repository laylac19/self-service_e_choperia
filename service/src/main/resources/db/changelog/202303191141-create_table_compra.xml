<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">


    <changeSet id="1680004775373-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_compra" startValue="1"/>
        <createTable tableName="cliente_compra">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cliente_compra"/>
            </column>
            <column name="valor_compra" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="cliente_compra_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ativo" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="cliente_compra_id" baseTableName="cliente_compra"
                                 constraintName="FK_CLIENTE_COMPRA_ON_CLIENTE_COMPRA" referencedColumnNames="id"
                                 referencedTableName="cliente"/>
    </changeSet>
</databaseChangeLog>
