<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1680004872837-1" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_compra" startValue="1"/>
        <createTable tableName="chope_compra">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chope_compra"/>
            </column>
            <column name="chope_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="chope_id" baseTableName="chope_compra"
                                 constraintName="FK_CHOPE_COMPRA_ON_CHOPE" referencedColumnNames="id"
                                 referencedTableName="chope"/>
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="chope_compra"
                                 constraintName="FK_CHOPE_COMPRA_ON_ID" referencedColumnNames="id"
                                 referencedTableName="cliente_compra"/>
    </changeSet>
</databaseChangeLog>
